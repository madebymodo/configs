{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "noEmit": true
  },
  "include": ["**/*.mjs"],
  "exclude": ["node_modules"],
  "display": "Recommended"
}
